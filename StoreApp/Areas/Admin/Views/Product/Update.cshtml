@model Product

<div class="text-center">
    <div class="display-6">Products</div>
</div>

<form method="post" asp-action="Update">
    <input type="hidden" asp-for="ProductId" />

    <div class="text-danger" asp-validation-summary="All">
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName">Product Title</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice">Product Price ₺</label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-warning" type="submit"><i class="fa fa-save"></i> Update</button>
            <a asp-action="Index" class="btn btn-outline-danger"><i class="fa-solid fa-arrow-left"></i> Back</a>
        </div>
    </div>
</form>