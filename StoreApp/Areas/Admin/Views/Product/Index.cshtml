@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa fa-plus"></i> Create Product</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Title</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prd in Model)
            {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>@prd.ProductName</td>
                    <td>@prd.ProductPrice ₺</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-outline-warning" asp-action="Update" asp-route-id="@prd.ProductId"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@prd.ProductId"><i class="fa-solid fa-trash"></i></a>
                            <a class="btn btn-outline-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId"><i class="fa-solid fa-search"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
